{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["cypress"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["./src/*"]
		}
	},
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
	"include": [
		"src",
		"jest.config.js",
		"cypress.config.ts",
		"vite.config.ts"
	]
}
